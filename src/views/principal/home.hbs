            position: relative;
            padding: 10px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        #asistencia .text-container {
            max-width: 70%;
        }

        #asistencia .btn-container {
            margin-left: auto;
        }

        /* Estilos de la sección de servicios */
        .services {
            background: #e0e0e0;
            text-align: center;
            padding: 4rem 0;
        }

        .service-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 20px;
        }

        .service-item {
            background-color: #fff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .service-item h3 {
            font-size: 1.5rem;
            margin-bottom: 0.5rem;
        }

        .service-item p {
            font-size: 1rem;
            color: #666;
        }

        /* Estilos de la sección "Sobre nosotros" */
        .about {
            text-align: center;
            padding: 4rem 0;
            background: #fff;
        }

        .about p {
            font-size: 1.125rem;
            color: #666;
            max-width: 700px;
            margin: 0 auto;
        }

        /* Estilos de la sección de contacto */
        .contact {
            background: #e0e0e0;
            padding: 4rem 0;
        }

        .contact h2 {
            margin-bottom: 2rem;
            color: #03A9F4;
        }

        .contact form {
            max-width: 600px;
            margin: 0 auto;
            display: flex;
            flex-direction: column;
        }

        .contact label {
            margin-bottom: 0.5rem;
            font-weight: bold;
            color: #333;
        }

        .contact input,
        .contact textarea {
            margin-bottom: 1rem;
            padding: 0.75rem;
            border: 1px solid #ccc;
            border-radius: 5px;
            color: #333;
            background-color: #fff;
        }

        /* Estilos del pie de página */
        footer {
            background-color: #222;
            color: #fff;
            padding: 40px 0;
        }

        .social-links {
            display: flex;
            justify-content: center;
            margin-bottom: 20px;
        }

        .social-links a {
            margin-right: 20px;
        }

        .social-links img {
            width: 40px;
            height: 40px;
            border-radius: 50%;
        }

        footer p {
            margin-top: 20px;
            font-size: 14px;
            text-align: center;
        }

