    <style>
        /* Estilos CSS */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Roboto', sans-serif;
        }

        body {
            line-height: 1.6;
            color: #333;
            background-color: #f9f9f9;
            overflow-x: hidden;
        }

        .container {
            width: 90%;
            margin: 0 auto;
        }

        /* Estilos del encabezado */
        header {
            background: black;
            color: #fff;
            padding: 2rem 0;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            position: fixed;
            width: 100%;
            top: 0;
            z-index: 1000;
        }

        header .container {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        header h1 {
            font-size: 2rem;
            font-weight: 700;
        }

        header nav ul {
            list-style: none;
            display: flex;
        }

        header nav ul li {
            margin-left: 2rem;
        }

        header nav ul li a {
            color: #fff;
            text-decoration: none;
            font-weight: 500;
            transition: color 0.3s ease;
        }

        header nav ul li a:hover {
            color: #f0f0f0;
        }

        /* Estilos de la sección del héroe */
        .hero {
            background: url('imagenes/fondo_pagina_home.png') center/cover;
            color: black;
            padding: 10rem 0;
            text-align: center;
        }

        .hero h2 {
            font-size: 3rem;
            margin-bottom: 2rem;
        }

        .hero p {
            font-size: 1.25rem;
            margin-bottom: 2rem;
        }

        .hero .btn {
            color: black;
            background:  royalblue;
            padding: 1rem 2rem;
            font-size: 1.5rem;
            border-radius: 5px;
            text-decoration: none;
            transition: background 0.3s ease;
        }

        .hero .btn:hover {
            background: #FFA000;
        }

        /* Estilos de la sección de atención */
        .attention {
            background: #f9f9f9;
            padding: 4rem 0;
        }

        .attention .container {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .attention-text {
            width: 60%;
        }

        .attention-text h2 {
            font-size: 2.5rem;
            color: #333;
            margin-bottom: 1rem;
        }

        .attention-text p {
            font-size: 1.125rem;
            color: #666;
        }

        .attention-image {
            width: 30%;
        }

        /* Estilos de la sección de asistencia */
